@model EventPlanner.Models.Gathering

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Gathering</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GatheringId" />
            <div class="form-group">
                <label asp-for="GatheringName" class="control-label"></label>
                <input asp-for="GatheringName" class="form-control" />
                <span asp-validation-for="GatheringName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GatheringDesc" class="control-label"></label>
                <input asp-for="GatheringDesc" class="form-control" />
                <span asp-validation-for="GatheringDesc" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MinorsAllowed" /> @Html.DisplayNameFor(model => model.MinorsAllowed)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="GatheringStart" class="control-label"></label>
                <input asp-for="GatheringStart" class="form-control" />
                <span asp-validation-for="GatheringStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GatheringEnd" class="control-label"></label>
                <input asp-for="GatheringEnd" class="form-control" />
                <span asp-validation-for="GatheringEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
